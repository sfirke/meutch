# Flask Configuration
FLASK_APP=app:create_app
FLASK_ENV=development

# Database Configuration
# For local development using the Docker Compose test database
DATABASE_URL=postgresql://test_user:test_password@localhost:5433/meutch_dev

# Security
# Generate a secure key with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=dev-key-change-this-in-production

# URL Configuration (required for CLI commands and scheduled jobs like loan reminders)
# Include the scheme (http:// or https://)
SERVER_NAME=https://localhost:5000

# File Storage Configuration
# Set to "local" for local development (files stored in app/static/uploads/)
# Set to "digitalocean" for production (requires DO_SPACES_* variables below)
STORAGE_BACKEND=local

# DigitalOcean Spaces Configuration (only needed when STORAGE_BACKEND=digitalocean)
# DO_SPACES_KEY=your_spaces_key_here
# DO_SPACES_SECRET=your_spaces_secret_here
# DO_SPACES_REGION=nyc3
# DO_SPACES_BUCKET=your_bucket_name

# Email Configuration (optional for local development)
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_domain.com

# Email Allowlist (optional - for staging/testing environments)
# Comma-separated list of email addresses that are allowed to receive emails.
# When set, ONLY these addresses will receive emails (all others are blocked but logged).
# Leave unset or empty in production to send to all users.
# Example: EMAIL_ALLOWLIST=user1@example.com,test@example.com
# EMAIL_ALLOWLIST=
